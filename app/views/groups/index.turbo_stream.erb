<turbo-stream action="replace" target="groups">
special group
  <template>
    <%= form_for @group do |f| %>
        <%= f.label :language_id %>
        <%= f.collection_select :language_id, Language.all, :id, :language %>

        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.submit "Create Group" %>
    <% end %> 

    <% @groups.each do |group| %>
      <%= render partial: 'partials/groups', locals: { group: group } %>
    <% end %>
  </template>
</turbo-stream>